/* pages/person/person.wxss */
@import "../../wxss/icon.wxss";

.meeting-title {
  padding: 85rpx 0 42rpx 0;
  color: #2e2e39;
  font-size: 42rpx;
}

.register {
  text-align: center;
}

.input-area {
  background-color: #fff;
  text-align: left;
  padding: 0 10%;
}

.section {
  width: 100%;
  position: relative;
  padding-top: 35rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ddd;
}

.label {
  font-size: 24rpx;
  color: #000;
}

.input-area input {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14px;
  color: #000;
}

.input-area input {
  box-sizing: border-box;
  /* padding-left: 20%; */
}

.btn-area {
  width: 92%;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
}

.btn-area button {
  margin: 0;
  padding: 0;
  margin-top: 64rpx;
  color: #fff;
  font-size: 37rpx;
  border: none;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: none;
}

.forgot-password {
  color: #888;
}

.register {
  color: #f90;
}

.btn-area:active {
  opacity: 0.7;
}

.btn-area>.one-appointment {
  width: 65%;
  background-color: #10aeff;
  border-radius: 50rpx;
}

.addMeeting {
  position: absolute;
  right: 0rpx;
  top: 92rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #000;
  z-index: 5;
}
