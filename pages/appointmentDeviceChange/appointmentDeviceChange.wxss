/* pages/deviceChange/deviceChange.wxss */
@import "../../wxss/icon.wxss";

.devicechange {
  padding: 40rpx;
}

.section {
  width: 100%;
  background: #f8f9f9;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.itemA {
  font-size: 35rpx;
}

.itemB {
  font-size: 24rpx;
  display: inline-block;
}

.itemColorB {
  color: #6cc9fc;
}

.itemColorGrey {
  color: #99999c;
}

.status {
  margin-right: 40rpx;
}

.itemA, .itemB, .itemC {
  margin-bottom: 20rpx;
}

.itemC {
  font-size: 24rpx;
  color: #99999c;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 50rpx;
}

.itemC>text {
  text-align: center;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  background: #fff;
  font-size: 26rpx;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.info-no-content {
  padding-top: 106rpx;
  text-align: center;
}

.info-no-content image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
}

.info-no-content text {
  position: relative;
  top: 40rpx;
  font-size: 28rpx;
  color: #58585f;
  margin: 0 auto;
  display: block;
  padding-top: 10rpx;
}

.info-no-content>.device-sao {
  color: #ade3ff;
  font-size: 30rpx;
}
